<div class="Groscontainer">
<div>
  <h1>Games#new</h1>
</div>
  <div class="container">
    <% @letters.each do |letter| %>
      <div class="box btn btn-primary"> <%= letter %></div>
    <% end %>
  </div>
   <form action="/score" method="post">
